<p id="notice"><%= notice %></p>

<h1>Listing Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= link_to 'Show', game %></td>
        <td>
          <% if membership = Membership.find_by(user: @user, game: game) %>
            <%= link_to 'Leave', membership, method: :delete,  data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Join', memberships_path(membership: {user_id: @user.id, game_id: game.id}) %>
          <% end %>
        </td>
        <% if game.user == @user %>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

